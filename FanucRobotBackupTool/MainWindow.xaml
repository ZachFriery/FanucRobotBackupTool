<Window x:Class="FanucRobotBackupTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FanucRobotBackupTool"
        mc:Ignorable="d"
        Title="Fanuc Robot Backup Tool" Height="450" Width="800">


    <Grid Background="#FFF8F8F8">

        <!-- Main Window Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: TreeView + Buttons -->
        <DockPanel Grid.Column="0" Background="#F8F8F8">
            <StackPanel Orientation="Horizontal" Margin="5" DockPanel.Dock="Top">

                <!-- Add Button -->
                <Button x:Name="AddButton"
                        Content="Add"
                        Width="60"
                        Margin="0,0,5,0"
                        Click="AddDeviceButton_Click"/>

                <!-- Remove Button -->
                <Button x:Name="RemoveButton"
                        Content="Remove"
                        Width="60"
                        Margin="0,0,5,0"
                        Click="RemoveDeviceButton_Click"/>

                <!-- Log Files CheckBox-->
                <CheckBox x:Name="LogFilesCheckBox"
                          Content="Log Files"
                          VerticalAlignment="center"
                          Margin="0,0,5,0"
                          IsChecked="{Binding LogFiles, Mode=TwoWay}"/>
               
            </StackPanel>

            <!-- Device Tree -->
            <TreeView ItemsSource="{Binding Devices}" SelectedItemChanged="DeviceTreeView_SelectedItemChanged" Margin="5,0,5,5">
                <TreeView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </TreeView.ItemTemplate>
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="FontWeight" Value="Normal"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TreeViewItem">
                                    <Border x:Name="Bd"
                                            Background="Transparent"
                                            Padding="4,2"
                                            SnapsToDevicePixels="True"
                                            BorderThickness="1"
                                            BorderBrush="Transparent">
                                        <ContentPresenter ContentSource="Header"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Center"/>
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#FFBFCDDB"/>
                                            <Setter TargetName="Bd" Property="TextElement.Foreground" Value="Black"/>
                                            <Setter TargetName="Bd" Property="BorderBrush" Value="Black"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="LightBlue"/>
                                            <Setter TargetName="Bd" Property="TextElement.Foreground" Value="Black"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>

        </DockPanel>

        <!-- Right Panel: Form and Log -->
        <Grid Grid.Column="1" Margin="0,0,5,5">

            <!-- Right Panel Rows/Cols -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Device Name -->
            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Margin="0,0,5,5"
                       Height="15"
                       Text="Device Name:"/>

            <TextBox x:Name="DeviceNameTextBox"
                     Grid.Row="0"
                     Grid.Column="1"
                     VerticalAlignment="Center"
                     Margin="0,5,5,5"
                     LostFocus="DeviceNameTextBox_LostFocus"
                     Text="{Binding SelectedDevice.Name, UpdateSourceTrigger=PropertyChanged}" />

            <!-- IP Address -->
            <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Margin="0,0,5,5"
                       Height="16"
                       Text="IP Address:"/>

            <TextBox x:Name="IpAddressTextBox"
                     Grid.Row="1"
                     Grid.Column="1"
                     VerticalAlignment="Center"
                     Margin="0,5,5,5"
                     Text="{Binding SelectedDevice.IpAddress, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Directory -->
            <TextBlock Grid.Row="2"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Margin="0,0,5,5"
                       Height="16"
                       Text="Directory:"/>

            <TextBox x:Name="DirectoryTextBox"
                     Grid.Row="2"
                     Grid.Column="1"
                     VerticalAlignment="Center"
                     Margin="0,6,5,6"
                     IsReadOnly="True"
                     Text="{Binding SelectedDevice.FilePath, UpdateSourceTrigger=PropertyChanged}"/>

            <Button x:Name="BrowseButton"
                    Grid.Row="2"
                    Grid.Column="2"
                    Content="Browse"
                    Margin="0,5,0,5"
                    Click="BrowseButton_Click"/>

            <!-- Log Output -->
            <TextBox x:Name="LogTextBox"
                     Grid.Row="3"
                     Grid.Column="0"
                     Grid.ColumnSpan="3"
                     Margin="0,0,0,0"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalAlignment="Stretch"
                     VerticalScrollBarVisibility="Auto"
                     Background="#FF293A56"
                     Foreground="White"/>

            <!-- Progress Status -->
            <TextBlock x:Name="ProgressLabel"
                       Grid.Row="4"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="0,0,0,0"
                       Height="16"
                       Width="175"
                       Text=""
                       FontWeight="Bold"
                       Visibility="Hidden" />

            <!-- Progress Bar -->
            <ProgressBar x:Name="ProgressBar"
                         Grid.Row="4"
                         Grid.Column="1"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Height="20"
                         Width="200"
                         MinWidth="200"
                         Minimum="0"
                         Maximum="100"
                         Margin="0,0,0,0" 
                         Visibility="Hidden"
                         Grid.RowSpan="2"/>

            <!-- Run Button -->
            <Button x:Name="RunButton"
                    Grid.Row="4"
                    Grid.Column="2"
                    Content="Run"
                    Width="60"
                    Height="25"
                    Click="RunButton_Click"
                    Margin="0,5,5,0"/>

            <!-- Cancel Button -->
            <Button x:Name="CancelButton"
                    Grid.Row="4"
                    Grid.Column="2"
                    Content="Cancel"
                    Width="60"
                    Height="25"
                    Click="CancelButton_Click"
                    Margin="0,5,5,0"
                    Visibility="Hidden"/>

        </Grid>
    </Grid>
</Window>
